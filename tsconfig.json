{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./build",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es2022",
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
